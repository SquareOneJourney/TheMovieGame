generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // Use Supabase UUID directly, no @default
  name      String
  email     String   @unique
  password  String
  score     Int      @default(0) // Player score for games
  games     Game[]   @relation("PlayerGames")
  createdAt DateTime @default(now())
}

model Game {
  id         String   @id @default(cuid())
  players    User[]   @relation("PlayerGames")
  rounds     Round[]
  status     String   // "waiting", "in_progress", "finished"
  currentTurn String? // User.id of current player's turn
  createdAt  DateTime @default(now())
}

model Round {
  id            String   @id @default(cuid())
  game          Game     @relation(fields: [gameId], references: [id])
  gameId        String
  clueGiver     String   // User.id
  guesser       String   // User.id
  actor1        String
  actor2        String
  actor3        String?  // additional actor for flexibility
  actor4        String?  // additional actor for flexibility
  actor5        String?  // additional actor for flexibility
  movie         String   // correct answer
  poster        String?  // movie poster URL
  year          String?  // movie year
  actor1Photo   String?  // actor1 profile photo URL
  actor2Photo   String?  // actor2 profile photo URL
  actor3Photo   String?  // actor3 profile photo URL
  actor4Photo   String?  // actor4 profile photo URL
  actor5Photo   String?  // actor5 profile photo URL
  hintActor     String?  // optional hint actor
  hintActorPhoto String? // hint actor profile photo URL
  guess         String?
  outcome       String?  // "correct" or "wrong"
  hintUsed      Boolean  @default(false)
  createdAt     DateTime @default(now())
}

model Movie {
  id        String   @id @default(cuid())
  actor1    String
  actor2    String
  actor3    String?  // additional actor for flexibility
  actor4    String?  // additional actor for flexibility
  actor5    String?  // additional actor for flexibility
  title     String
  createdAt DateTime @default(now())
}
